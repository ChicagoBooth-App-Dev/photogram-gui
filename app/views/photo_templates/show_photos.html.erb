<h1>Photo Details</h1>


<dl>
  <dt>Image</dt>
    <dd><img src= "<%= @photo_object.image %>"></dd>
  <dt>Caption</dt>
    <dd><%= @photo_object.caption %></dd>
  <dt>Owner</dt>
    <dd><%= @photo_object.poster.username %></dd>  
  <dt>Posted</dt>
    <dd><%= @photo_object.created_at %></dd>
  <dt>Edit photo</dt>
    <dd>
      <form action="/update_photo/<%= @photo_object.id %>">
        <label for="browser_image">Image</label>
        <input id="browser_image" type="text" name="query_image" placeholder="Enter a URL for the image..." value="<%= @photo_object.image %>">

        <label for="browser_caption">Caption</label>
        <textarea id="browser_caption" name="query_caption" placeholder="Enter a caption for the photo..."><%= @photo_object.caption %></textarea>

        <button>Update photo</button>
      </form>
    </dd>
  <dt>Delete photo</dt>
    <dd><a href = '/delete_photo/<%= @photo_object.id %>'>Delete photo</a></dd>
</dl>

<h2>Comments</h2>

<table>
  <tr>
    <th>Commenter</th>
    <th>Comment</th>
    <th>Posted</th>
  </tr>

  <% @photo_object.comments.each do |a_comment| %>
    <tr>
      <td><%= a_comment.commenter.username %></td>
      <td><%= a_comment.body %></td>
      <td><%= a_comment.created_at %></td>
    </tr>
  <% end %>

</table>

<h3>Add a new comment</h3>

<form action="/insert_comment_record">
  <label for="browser_photo_id">Photo ID</label>
  <input id="browser_photo_id" type="text" value="<%= @photo_object.id %>" name="input_photo_id">

  <label for="browser_author_id">Author ID</label>
  <input id="browser_author_id" type="text" name="input_author_id">

  <label for="browser_comment">Comment</label>
  <textarea id="browser_comment" name="input_body" placeholder="Enter a comment..."></textarea>

  <button>Add comment</button>
</form>